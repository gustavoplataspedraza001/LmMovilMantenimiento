<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:padding="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/background_dialog">
            <TextView
                android:id="@+id/txtTituloDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/titulo_top2"
                android:padding="10dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="DescripciÃ³n"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/ivTitulo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/white"
                android:src="@drawable/ic_description"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivDes"
                android:layout_width="200dp"
                android:src="@drawable/noimagen"
                app:civ_border_color="@color/rojo"
                app:civ_border_width="1dp"
                app:layout_constraintTop_toBottomOf="@id/txtTituloDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/txtDes"
                android:layout_gravity="center"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/txtDes"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:lines="5"
                app:layout_constraintTop_toBottomOf="@id/ivDes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/btnCerrarDialogo"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@id/clyt"
                android:background="@drawable/roundedbtn"
                app:layout_constraintTop_toBottomOf="@id/clyt"/>
</androidx.constraintlayout.widget.ConstraintLayout>