<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:padding="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDIalogoSeleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/txtTituloDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titulo_top2"
            android:padding="10dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Seleccionar usuario"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/ivTitulo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:tint="@color/white"
            android:src="@drawable/ic_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"/>
        <Spinner
            android:id="@+id/spnUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTituloDesc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/btnCancelarSeleccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_margin="10dp"
        android:text="Cancelar selecciÃ³n"
        android:background="@drawable/roundedbtn"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/clDIalogoSeleccion"
        app:layout_constraintTop_toBottomOf="@id/clDIalogoSeleccion"
        app:layout_constraintEnd_toStartOf="@id/btnSeleccionar"/>
    <Button
        android:id="@+id/btnSeleccionar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_margin="10dp"
        android:text="Seleccionar usuario"
        android:background="@drawable/roundedbtnnrnja"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/clDIalogoSeleccion"
        app:layout_constraintBottom_toBottomOf="@id/clDIalogoSeleccion"
        app:layout_constraintStart_toEndOf="@id/btnCancelarSeleccion"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>