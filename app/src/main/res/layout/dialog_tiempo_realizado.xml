<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:padding="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/background_dialog">
            <TextView
                android:id="@+id/txtTituloDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/titulo_top2"
                android:padding="10dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Tiempo de ejecuciÃ³n"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/ivTitulo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/white"
                android:src="@drawable/ic_description"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:id="@+id/txtDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtTituloDesc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="HH"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHorasRealizado"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:maxLength="2"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="MM"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMinutosRealizado"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:maxLength="2"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/btnCancelarDialogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbtn"
        android:text="Cancelar"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:drawableStart="@drawable/ic_clear"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAceptarDialogo"
        app:layout_constraintBottom_toBottomOf="@id/clyt"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/clyt" />
    <Button
        android:id="@+id/btnAceptarDialogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbtn_terminadr"
        android:text="Guardar"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:drawableStart="@drawable/ic_check"
        android:paddingStart="10dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancelarDialogo"
        app:layout_constraintBottom_toBottomOf="@id/clyt"
        app:layout_constraintTop_toBottomOf="@id/clyt" />
</androidx.constraintlayout.widget.ConstraintLayout>