<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:id="@+id/layoutDialogContainer">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_dialog">
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titulo_top"
            android:padding="10dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivTitulo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/txtInfoRecordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"/>
        <EditText
            android:id="@+id/etCantidadRepetir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="Cantidad"
            android:inputType="number"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            app:layout_constraintBottom_toTopOf="@id/spnTipoRepeticion"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/spnTipoRepeticion"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/etCantidadRepetir"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/btnCancelarSeleccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbtn"
        android:text="Cancelar"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:drawableStart="@drawable/ic_clear"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAceptarRDate"
        app:layout_constraintBottom_toBottomOf="@id/clDialogo"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/clDialogo" />
    <Button
        android:id="@+id/btnAceptarRDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbtn_terminadr"
        android:text="Guardar"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:drawableStart="@drawable/ic_check"
        android:paddingStart="10dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancelarSeleccion"
        app:layout_constraintBottom_toBottomOf="@id/clDialogo"
        app:layout_constraintTop_toBottomOf="@id/clDialogo" />
</androidx.constraintlayout.widget.ConstraintLayout>