<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:id="@+id/clListadoPreventivos"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentPreventivos.TodosPreventivosFragment">

    <Toolbar
        android:id="@+id/tlbar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="50dp"
        android:background="@color/rojo">
        <ImageButton
            android:id="@+id/ibRegresarTareasG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@color/rojo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mttos. (preventivas)"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingEnd="20dp"/>
    </Toolbar>
    <LinearLayout
        android:id="@+id/llFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tlbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llMisTareasErrores"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/btnFiltroTodos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@drawable/rounded4"
            android:layout_margin="5dp"
            android:textColor="@color/terminado"
            android:textAlignment="center"
            android:text="Todos"
            android:padding="4dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnFiltroPendientes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/rojoDrk"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text=""
            android:padding="4dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnFiltroEnProceso"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#010940"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text=""
            android:padding="4dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnFiltroEnRevision"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#787733"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text=""
            android:padding="4dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnFiltroTerminada"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:backgroundTint="#0F3200"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text=""
            android:padding="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llMisTareasErrores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/llFiltros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMiListadoTareas"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>